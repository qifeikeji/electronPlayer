{
  "name": "electron-player",
  "version": "1.0.0",
  "description": "Modern media player built with Electron and React",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "build:linux": "npm run build && electron-builder --linux",
    "dist": "npm run build && electron-builder --publish=never"
  },
  "dependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.0",
    "vite": "^5.0.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.0.0",
    "concurrently": "^8.0.0",
    "wait-on": "^7.0.0"
  },
  "build": {
    "appId": "com.electronplayer.app",
    "productName": "ElectronPlayer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*"
    ],
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "category": "AudioVideo",
      "synopsis": "Modern media player for desktop",
      "description": "A feature-rich media player built with Electron and React, supporting multiple video and audio formats with an intuitive interface.",
      "desktop": {
        "Name": "ElectronPlayer",
        "Comment": "Modern Media Player",
        "Categories": "AudioVideo;Player;Video;Audio;",
        "MimeType": "video/mp4;video/webm;video/ogg;audio/mp3;audio/wav;audio/ogg;audio/flac;"
      }
    },
    "appImage": {
      "license": "LICENSE",
      "category": "AudioVideo"
    }
  },
  "homepage": "./",
  "author": "Your Name",
  "license": "MIT"
}
